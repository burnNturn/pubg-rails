<p>
    <strong>Name</strong><br />
    <%= @user.name %>
</p>
<p>
    <strong>Account Authentication through</strong><br />
    <%= @user.provider %>
</p>
<p>
    <strong>Email</strong><br />
    <%= @user.email %>
</p>
<p>
    <strong>PUBG Screen Name</strong><br />
    <%= @user.pubg_account %>
</p>

<%= form_for(user_path(:id => current_user), :method => :put, :remote => true) do |f| %>
    <div class="field">
    <%= f.label :email %><br />
    <div id="current-email"><%= @user.email %></div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", visibility: "block" %>
    </div>
    
    <div class="field">
    <%= f.label :name %><br />
    <div id="current-name"><%= @user.name %></div>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    
    <div class="field">
    <%= f.label :pubg_account %><br />
    <div id="current-pubg-account"><%= @user.pubg_account %></div>
    <%= f.text_field :pubg_account, autofocus: true, autocomplete: "enter your PUBG screen name here" %>
    </div>
    
    <%= submit_tag 'Save' %>
<% end %>