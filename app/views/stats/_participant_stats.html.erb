<div id='stat-container' class='container'>
  <div class="row">
    <% if local_assigns[:player_show].nil? %>
      <div id="match-container" class='col'>
        <h3>Match Info</h3>
        <ul>
          <li><%= "Start Time: " + match.created.to_s %></li>
          <li><%= "Duration: " + StatsHelper.friendly_duration_time(match.duration) %></li>
          <li><%= "Type: " + StatsHelper.friendly_match_type(match.mode) %></li>
          <li><%= "Map: " + (match.map ? match.map : "Unknown") %></li>
          <li><%= "Platform/Location: " + match.shard %></li>
          <li><%= "Player Count: " + match.player_count.to_s %></li>
          <li>
            <span>Winners:</span>
            <ol>
            <% winners.each do |participant| %>
              <li><%= participant.player.name + " - Kills: " + participant.kills.to_s %></li>
            <% end %>
            </ol>
          </li>
        </ul>
      </div>
    <% end %>
    <div id="participant-container" class='col'>
      <% if local_assigns[:player_show] %>
        <h3>Latest Match</h3>
      <% else %>
        <h3><%= participant.player.name + "'s Latest Match" %></h3>
      <% end %>
      <ul>
        <li class="highlight"><%= "Knocks: " + participant.dbnos.to_s %></li>
        <li class="highlight"><%= "Win Place: " + participant.win_place.to_s %></li>
        <li class="highlight"><%= "Kill: " + participant.kills.to_s %></li>
        <li class="highlight"><%= "Headshots(kills): " + participant.headshot_kills.to_s %></li>
        <li class="highlight"><%= "Damage Dealt: " + participant.damage_dealt.to_s %></li>
        <li class="highlight"><%= "Longest Kill: " + participant.longest_kill.to_s %></li>
        <li class="highlight"><%= "Distance Travelled: " + (participant.walk_distance + participant.ride_distance).to_s %></li>
        <li><%= "Assists: " + participant.assists.to_s %></li>
        <li><%= "Boosts: " + participant.boosts.to_s %></li>
        <li><%= "Death Type: " + participant.death_type.to_s %></li>
        <li><%= "Heals: " + participant.heals.to_s %></li>
        <li><%= "Place(base on kills): " + participant.kill_place.to_s %></li>
        <li><%= "Kill Streaks: " + participant.kill_streaks.to_s %></li>
        <li><%= "Revives: " + participant.revives.to_s %></li>
        <li><%= "Road Kills: " + participant.road_kills.to_s %></li>
        <li><%= "Team Kills: " + participant.team_kills.to_s %></li>
        <li><%= "Time Survived: " + participant.time_survived.to_s %></li>
        <li><%= "Vehicles Destroyed: " + participant.vehicle_destroys.to_s %></li>
        <li><%= "Weapons Acquired: " + participant.weapons_acquired.to_s %></li>
      </ul>
    </div>
    <% if local_assigns[:player_show] %>
      <div id="season-container" class='col'>
      <h3>Season Stats</h3>
      <div id='game-mode-select'>
        <%= label_tag 'game-mode' %>
        <%= select_tag "game-mode", SeasonsHelper.build_select_opts({:game_modes => @player.seasons.pluck(:game_mode)}).html_safe %>
      </div>
        <ul>
            <li class="highlight"><%= "Kills: " + @player.seasons.first.kills.to_s %></li>
            <li class="highlight"><%= "Headshot Kills: " + @player.seasons.first.headshot_kills.to_s %></li>
            <li class="highlight"><%= "Longest Kill: " + @player.seasons.first.longest_kill.to_s %></li>
            <li class="highlight"><%= "Kill Points: " + @player.seasons.first.kill_points.to_s %></li>
            <li class="highlight"><%= "Top Tens: " + @player.seasons.first.top_tens.to_s %></li>
            <li class="highlight"><%= "Total Wins: " + @player.seasons.first.wins.to_s %></li>
            <li class="highlight"><%= "Win Points: " + @player.seasons.first.win_points.to_s %></li>
            <li><%= "Assists: " + @player.seasons.first.assists.to_s %></li>
            <li><%= "Boosts: " + @player.seasons.first.boosts.to_s %></li>
            <li><%= "Damage Dealth: " + @player.seasons.first.damage_dealt.to_s %></li>
            <li><%= "Heals: " + @player.seasons.first.heals.to_s %></li>
            <li><%= "Knocks: " + @player.seasons.first.dbnos.to_s %></li>
            <li><%= "Max Kill Streaks: " + @player.seasons.first.max_kill_streaks.to_s %></li>
            <li><%= "Revives: " + @player.seasons.first.revives.to_s %></li>
            <li><%= "Road Kills: " + @player.seasons.first.road_kills.to_s %></li>
            <li><%= "Team Kills: " + @player.seasons.first.team_kills.to_s %></li>
            <li><%= "Time Survived: " + @player.seasons.first.time_survived.to_s %></li>
            <li><%= "Vehicles Destroyed: " + @player.seasons.first.vehicle_destroys.to_s %></li>
            <li><%= "Weapons Acquired: " + @player.seasons.first.weapons_acquired.to_s %></li>
            <li><%= "Daily Kills: " + @player.seasons.first.daily_kills.to_s %></li>
            <li><%= "Days: " + @player.seasons.first.days.to_s %></li>
            <li><%= "Longest Time Survivde: " + @player.seasons.first.longest_time_survived.to_s %></li>
            <li><%= "losses: " + @player.seasons.first.losses.to_s %></li>
            <li><%= "Most Survival Time: " + @player.seasons.first.most_survival_time.to_s %></li>
            <li><%= "Ride Distance: " + @player.seasons.first.ride_distance.to_s %></li>
            <li><%= "Most Kills: " + @player.seasons.first.round_most_kills.to_s %></li>
            <li><%= "Rounds Played: " + @player.seasons.first.rounds_played.to_s %></li>
            <li><%= "Suicides: " + @player.seasons.first.suicides.to_s %></li>
            <li><%= "Walk Distance: " + @player.seasons.first.walk_distance.to_s %></li>
            <li><%= "Weekly Kills: " + @player.seasons.first.weekly_kills.to_s %></li>
        </ul>
    </div>
    <% end %>
  </div>
</div>