<p id="notice"><%= notice %></p>

<h1 class='fl-w100 pubg-font'>Players</h1>

<table>
  <tbody>
    <tr>
      <th>Name</th>
      <th>K:D</th>
      <th>Total Wins</th>
    </tr>

    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player %></td>
        <td><%= PlayersHelper.get_kill_death_ratio(player) %></td>
        <td><%= player.seasons.pluck(:wins).sum %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
