<h1 class='pubg-font'>Edit User</h1>

<div id='edit-user-container' class='fl-w100'>
    <%= render "form" %>
    <div id='show-vid' class="half-edit-user-container">
        <%= button_to "Show videos", videos_path, method: :get %>
        <h3>Cancel my account</h3>
        <p>Unhappy?</p>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
    </div>
</div>
<%= link_to "Back", :back, id: 'back' %>
