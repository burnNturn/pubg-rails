<h1 class='fl-w100 pubg-font'>Log In</h1>

<div class="fl-w100">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-inline"}) do |f| %>
    <div class='user-signin-container'>
      <div class="field user-signin-item">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field user-signin-item">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    </div>
  <% end %>
</div>

<div id='sing-up-options'>
  <%= render "devise/shared/links" %>
</div>